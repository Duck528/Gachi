<Page
    x:Class="Gachi.View.MyProjectView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Gachi.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="bgColor" Color="#FF2F2C2C"/>
            <SolidColorBrush x:Key="fgColor" Color="#FF221F1F"/>
            <SolidColorBrush x:Key="selectBtnBgColor" Color="#FF243F65"/>
            <SolidColorBrush x:Key="deleteBtnBgColor" Color="#FFB72318"/>
        </ResourceDictionary>
    </Page.Resources>
    <Grid Background="{StaticResource bgColor}">
        <StackPanel Orientation="Vertical">
            <StackPanel.Children>
                <TextBlock Text="프로젝트 목록" FontSize="28" Margin="0 12 0 0" 
                           Foreground="WhiteSmoke" TextAlignment="Center"/>
                <!-- 
                프로젝트 내역 폼
                -->
                <StackPanel Background="{StaticResource fgColor}"
                            MinWidth="570" Height="250"
                            HorizontalAlignment="Left"
                            Margin="20 24 0 0">
                    <!--
                    프로젝트 메시지
                    -->
                    <TextBlock Text="{Binding StatusText}" FontSize="18"
                               Margin="15 8 0 0"
                               TextAlignment="Left" Foreground="WhiteSmoke"/>
                    <!--
                    프로젝트 목록
                    -->
                    <ListView ItemsSource="{Binding Projects}"
                              SelectedItem="{Binding SelectedProject, Mode=TwoWay}"
                              Width="500"
                              Margin="15 8 15 0"
                              MinHeight="150">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid HorizontalAlignment="Stretch">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Title}" Grid.Column="0" 
                                               Foreground="WhiteSmoke" FontSize="12" HorizontalAlignment="Left"/>
                                    <TextBlock Text="{Binding CreatedAt}" Grid.Column="2"
                                               Margin="10 0 0 0"
                                               Foreground="WhiteSmoke" FontSize="12"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <StackPanel Orientation="Horizontal">
                        <StackPanel.Children>
                            <!--
                            프로젝트 선택 버튼
                            -->
                            <Button Content="선택"
                                    Width="120" Margin="15 8 0 0"
                                    Background="{StaticResource selectBtnBgColor}"
                                    Foreground="WhiteSmoke"/>
                            <!--
                            제목 바꾸기 선택 버튼
                            -->
                            <Button Content="이름 바꾸기"
                                    Command="{Binding DoRename}"
                                    Width="120" Margin="7 6 0 0"
                                    Background="{StaticResource selectBtnBgColor}"
                                    Foreground="WhiteSmoke"/>
                            <!--
                            프로젝트 삭제 버튼
                            -->
                            <Button Content="삭제"
                                    Command="{Binding DoDelete}"
                                    Width="70" Margin="7 6 0 0"
                                    Background="{StaticResource deleteBtnBgColor}"
                                    Foreground="WhiteSmoke"/>
                        </StackPanel.Children>
                    </StackPanel>
                </StackPanel>
            </StackPanel.Children>
        </StackPanel>
    </Grid>
</Page>
